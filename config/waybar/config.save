{
    "layer": "top",
    "position": "top",
    "height": 30,

    "modules-left": [
    "hyprland/workspaces",
	"hyprland/window"
    ],

    "modules-center": [
	"clock#date",
	"clock#time"
    ],
    
    "modules-right": [
	"power-profiles-daemon",
	"pulseaudio",
    "memory",
    "cpu",
    "custom/multi_temp",
    "battery",
    "network",
    "bluetooth",
    "custom/notification",
    "custom/recorder_status"
    ],


    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------

     "battery": {
        "interval": 3,
        "states": {
            "warning": 30,
            "critical": 15,
            "allign": 0
        },
        "format": "{icon}{capacity}%",
        "format-discharging": "{icon}{capacity}%",
        "format-charging": "Û∞ÇÑ{capacity}%",
        "format-icons": [
           "Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"
        ]
    },
    "bluetooth": {
         "interval": 3,
         "format-on": "Û∞ÇØ",
         "format-off": "Û∞Ç≤",
	 "format-disabled": "Û∞Ç≤",
	 "format-connected": "Û∞ÇØ",
         "exec": "blueman-manager",
         "tooltip": true,
         "on-click": "blueman-manager"
    },

    "network": {
        "interval": 3,
        "format-wifi": "{icon}",
	"format-ethernet": "Û∞àÄ",
         "format-disconnected": "Û∞§≠",
         "format-icons": ["Û∞§ü", "Û∞§¢", "Û∞§•", "Û∞§®"],
         "tooltip": true,
         "tooltip-format": "{essid} - {ifname} - {ipaddr}",
	 "on-click":"foot -e nmtui"
    },

    "clock#time": {
        "interval": 1,
        "format": " {:%H:%M:%S}",
        "tooltip": false
    },

    "clock#date": {
      "interval": 10,
      "format": " ÔÅ≥  {:%e %b %Y}", // Icon: calendar-alt
      "tooltip-format": "{:%e %B %Y}"
    },

    "cpu": {
        "interval": 3,
        "format": "Ôãõ {usage}%", // Icon: microchip
        "states": {
          "warning": 70,
          "critical": 90
        }
    },

    "memory": {
        "interval": 3,
        "format": "Ôî∏{}%", // Icon: memory
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "hyprland/window": {
        "format": " {}",
        "max-length": 40
    },

    "hyprland/workspaces": {
            "format": "{icon}",
            "format-icons": {
                "active": "ÔÑë",
                "default": "ÔÑë",
                "empty": "ÔÑë"
            },
            "persistent-workspaces": {
                "*": [ 1,2,3,4,5 ]
            }
        },

    "pulseaudio": {
        //"scroll-step": 1,
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon} {volume}%Ôäî",
        "format-muted": "ÔÄ¶",
        "format-icons": {
            "headphones": "ÔÄ•",
            "handsfree": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
	"custom/multi_temp": {
    	   "format": "Ôãâ {}",
    	   "interval": 5,
   	    "return-type": "json",
   	    "exec": "CPU_PATH=$(grep -l 'k10temp' /sys/class/hwmon/hwmon*/name | sed 's/name/temp1_input/'); GPU_PATH=$(grep -l 'amdgpu' /sys/class/hwmon/hwmon*/name | sed 's/name/temp1_input/'); CPU_TEMP=$(($(cat $CPU_PATH) / 1000)); GPU_TEMP=$(($(cat $GPU_PATH) / 1000)); echo \"{\\\"text\\\": \\\"$CPU_TEMP¬∞C | $GPU_TEMP¬∞C\\\", \\\"tooltip\\\": \\\"CPU: $CPU_TEMP¬∞C\\\\nGPU: $GPU_TEMP¬∞C\\\"}\"",
   	    "tooltip": true
   },

    "custom/recorder_status": {
      "format": "{}",
      "tooltip": false,
      "interval": 2,
      "exec": "if pgrep -x wl-screenrec > /dev/null; then echo '{\"text\": \"üî¥\", \"class\": \"recording\"}'; else echo '{\"text\": \"\", \"class\": \"not-recording\"}'; fi",
      "on-click": "pkill wl-screenrec",
      "return-type": "json"
    },

    "custom/notification": {
    "tooltip": true,
    "format": "<span size='13pt'>{icon} W</span>",
    "format-icons": {
      "notification": "Û±Ö´",
      "none": "Û∞Çú",
      "dnd-notification": "Û∞Ç†",
      "dnd-none": "Û∞™ì",
      "inhibited-notification": "Û∞Çõ",
      "inhibited-none": "Û∞™ë",
      "dnd-inhibited-notification": "Û∞Çõ",
      "dnd-inhibited-none": "Û∞™ë"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

    "power-profiles-daemon": {
	"format": "{icon}",
	"tooltip-format": "Power profile: {profile}\nDriver: {driver}",
	"tooltip": true,
	"format-icons": {
	"default": "ÔÉß",
	"performance": "ÔÉß",
	"balanced": "Ôâé",
	"power-saver": "ÔÅ¨"
      }
    }
}
