# Show prompt
prompt=Search:

# Use dmenu mode (default: false)
dmenu=false

# Set the terminal emulator (used in some actions)
term=foot

# Define width and height (in pixels or percentage)
width=30%
height=30%

# Show icons (requires libnotify)
show-icons=true

# Set number of lines (for vertical lists)
lines=10

# Set display mode: normal | dmenu
mode=normal

# Hide scrollbar
no-scrollbar=true

# Use fuzzy matching
allow-markup=false
case-sensitive=false
allow-images=true
